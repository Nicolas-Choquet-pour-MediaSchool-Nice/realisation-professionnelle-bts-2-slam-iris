{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <style>
        .card.auth-card {
            max-width: 600px;
            overflow-y: auto;
        }
    </style>
    <div class="auth-container">
        <div class="card auth-card">
            <h1 class="text-center mb-3">Connexion</h1>

            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3 text-center">
                        Vous êtes connecté en tant que <strong>{{ app.user.userIdentifier }}</strong>,
                        <a href="{{ logout_path() }}">Déconnexion</a>
                    </div>
                {% endif %}

                <div class="form-group">
                    <label for="username">Email</label>
                    <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus placeholder="votre@email.com">
                </div>

                <div class="form-group">
                    <label for="password">Mot de passe</label>
                    <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required placeholder="••••••••">
                </div>

                <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

                <div class="checkbox-group mt-3">
                    <input type="checkbox" name="_remember_me" id="_remember_me">
                    <label for="_remember_me">Se souvenir de moi</label>
                </div>

                <button class="btn btn-primary mt-3" type="submit" style="width: 100%; padding: 12px;">
                    Se connecter
                </button>
            </form>

            <hr class="mt-4 mb-4">

            <div class="mt-4">
                <h5 class="text-center mb-3">Jeux de données de test</h5>
                <div class="table-responsive">
                    <table class="table table-sm table-bordered" style="font-size: 0.85em; width: 100%; border-collapse: collapse; border: 1px solid var(--table-border);">
                        <thead style="background-color: var(--badge-light-bg); color: var(--badge-light-text);">
                            <tr>
                                <th style="padding: 8px; border: 1px solid var(--table-border);">Rôle</th>
                                <th style="padding: 8px; border: 1px solid var(--table-border);">Email</th>
                                <th style="padding: 8px; border: 1px solid var(--table-border);">Mot de passe</th>
                                <th style="padding: 8px; border: 1px solid var(--table-border);">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td style="padding: 8px; border: 1px solid var(--table-border);">Admin</td>
                                <td style="padding: 8px; border: 1px solid var(--table-border);">admin@example.com</td>
                                <td style="padding: 8px; border: 1px solid var(--table-border);">password123</td>
                                <td style="padding: 8px; border: 1px solid var(--table-border); text-align: center;">
                                    <button type="button" class="btn btn-sm btn-outline-primary fill-login" data-email="admin@example.com" data-password="password123" style="padding: 2px 8px; font-size: 0.85em;">Utiliser</button>
                                </td>
                            </tr>
                            <tr>
                                <td style="padding: 8px; border: 1px solid var(--table-border);">Coordinator</td>
                                <td style="padding: 8px; border: 1px solid var(--table-border);">coordinator@example.com</td>
                                <td style="padding: 8px; border: 1px solid var(--table-border);">password123</td>
                                <td style="padding: 8px; border: 1px solid var(--table-border); text-align: center;">
                                    <button type="button" class="btn btn-sm btn-outline-primary fill-login" data-email="coordinator@example.com" data-password="password123" style="padding: 2px 8px; font-size: 0.85em;">Utiliser</button>
                                </td>
                            </tr>
                            <tr>
                                <td style="padding: 8px; border: 1px solid var(--table-border);">Student</td>
                                <td style="padding: 8px; border: 1px solid var(--table-border);">student@example.com</td>
                                <td style="padding: 8px; border: 1px solid var(--table-border);">password123</td>
                                <td style="padding: 8px; border: 1px solid var(--table-border); text-align: center;">
                                    <button type="button" class="btn btn-sm btn-outline-primary fill-login" data-email="student@example.com" data-password="password123" style="padding: 2px 8px; font-size: 0.85em;">Utiliser</button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const fillButtons = document.querySelectorAll('.fill-login');
            const emailInput = document.getElementById('username');
            const passwordInput = document.getElementById('password');

            fillButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const email = this.getAttribute('data-email');
                    const password = this.getAttribute('data-password');

                    emailInput.value = email;
                    passwordInput.value = password;

                    // Focus sur le bouton de connexion pour faciliter l'accès
                    document.querySelector('button[type="submit"]').focus();
                });
            });
        });
    </script>
{% endblock %}
