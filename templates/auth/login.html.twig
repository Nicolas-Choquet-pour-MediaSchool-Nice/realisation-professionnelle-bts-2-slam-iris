{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="auth-container">
        <div class="card auth-card">
            <h1 class="text-center mb-3">Connexion</h1>

            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3 text-center">
                        Vous êtes connecté en tant que <strong>{{ app.user.userIdentifier }}</strong>,
                        <a href="{{ logout_path() }}">Déconnexion</a>
                    </div>
                {% endif %}

                <div class="form-group">
                    <label for="username">Email</label>
                    <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus placeholder="votre@email.com">
                </div>

                <div class="form-group">
                    <label for="password">Mot de passe</label>
                    <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required placeholder="••••••••">
                </div>

                <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

                <div class="checkbox-group mt-3">
                    <input type="checkbox" name="_remember_me" id="_remember_me">
                    <label for="_remember_me">Se souvenir de moi</label>
                </div>

                <button class="btn btn-primary mt-3" type="submit" style="width: 100%; padding: 12px;">
                    Se connecter
                </button>
            </form>

            <div class="mt-3 text-center">
                <a href="{{ path('app_index') }}" class="text-muted" style="text-decoration: none; font-size: 0.9em;">&larr; Retour à l'accueil</a>
            </div>
        </div>
    </div>
{% endblock %}
