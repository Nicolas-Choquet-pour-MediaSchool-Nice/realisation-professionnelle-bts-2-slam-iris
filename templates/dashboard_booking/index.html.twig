{% extends 'base.html.twig' %}

{% block title %}Gestion des Réservations{% endblock %}

{% block body %}
    <style>
        body {
            display: block!important;
        }

        nav, .card {
            width: 100%;
            max-width: 100%;
        }

        .filter-group .btn {
            color: var(--text-main);
            transition: all 0.2s;
        }

        .filter-group .btn:hover {
            background-color: var(--dropdown-hover);
        }

        .filter-group .btn-primary {
            color: #ffffff !important;
        }
    </style>
<div class="container">
    <div class="header-section">
        <h1>Gestion des Réservations</h1>
        <div style="display: flex; gap: 10px; align-items: center;">
            <div class="filter-group" style="display: flex; background: var(--dropdown-bg); padding: 4px; border-radius: 8px; border: 1px solid var(--border-color);">
                <a href="{{ path('app_dashboard_booking', {status: 'all'}) }}"
                   class="btn btn-sm {% if currentStatus == 'all' %}btn-primary{% endif %}"
                   style="padding: 6px 12px; font-size: 0.85em; border-radius: 6px; text-decoration: none;">
                   Toutes
                </a>
                <a href="{{ path('app_dashboard_booking', {status: 'active'}) }}"
                   class="btn btn-sm {% if currentStatus == 'active' %}btn-primary{% endif %}"
                   style="padding: 6px 12px; font-size: 0.85em; border-radius: 6px; text-decoration: none;">
                   Actives
                </a>
                <a href="{{ path('app_dashboard_booking', {status: 'canceled'}) }}"
                   class="btn btn-sm {% if currentStatus == 'canceled' %}btn-primary{% endif %}"
                   style="padding: 6px 12px; font-size: 0.85em; border-radius: 6px; text-decoration: none;">
                   Annulées
                </a>
            </div>
            <a href="{{ path('app_dashboard') }}" class="btn btn-outline">&larr; Retour au dashboard</a>
        </div>
    </div>

    <div class="card">
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Salle</th>
                    <th>Utilisateur</th>
                    <th>Date</th>
                    <th>Créneau</th>
                    <th>Statut</th>
                    {% if isAdmin %}
                        <th>Actions</th>
                    {% endif %}
                </tr>
            </thead>
            <tbody>
                {% for res in reservations %}
                    <tr>
                        <td>{{ res.id }}</td>
                        <td><strong>{{ res.room.name }}</strong></td>
                        <td>{{ res.user.firstname }} {{ res.user.lastname }}</td>
                        <td>{{ res.reservationStart|date('d/m/Y') }}</td>
                        <td>
                            <span class="badge badge-light">
                                {{ res.reservationStart|date('H:i') }} - {{ res.reservationEnd|date('H:i') }}
                            </span>
                        </td>
                        <td>
                            {% if res.status == 'canceled' %}
                                <span class="badge badge-danger">Annulée</span>
                            {% else %}
                                <span class="badge badge-success">Active</span>
                            {% endif %}
                        </td>
                        {% if isAdmin %}
                            <td class="actions-cell">
                                {% if res.status != 'canceled' %}
                                    <button class="btn btn-danger" onclick="cancelReservation({{ res.id }}, '{{ res.reservationStart|date('H:i') }}', '{{ res.reservationEnd|date('H:i') }}')">
                                        Annuler
                                    </button>
                                {% endif %}
                            </td>
                        {% endif %}
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="{{ isAdmin ? 7 : 6 }}" style="text-align: center; padding: 40px; color: var(--text-muted);">Aucune réservation trouvée.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

<script>
function cancelReservation(reservationId, startTime, endTime) {
    if (confirm(`Voulez-vous vraiment annuler la réservation de ${startTime} à ${endTime} ?`)) {
        fetch(`/booking/cancel/${reservationId}`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                window.location.reload();
            } else {
                alert('Erreur: ' + (data.error || 'Une erreur est survenue'));
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Une erreur réseau est survenue');
        });
    }
}
</script>
{% endblock %}
