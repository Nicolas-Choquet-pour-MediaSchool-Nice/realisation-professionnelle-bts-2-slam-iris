{% extends 'base.html.twig' %}

{% block title %}Modifier l'administrateur{% endblock %}

{% block body %}
<style>
    body {
        display: block!important;
    }

    nav, .card {
        width: 100%;
        max-width: 100%;
    }
</style>
<div class="container">
    <div class="header-section">
        <h1>Modifier l'administrateur : {{ admin.user.firstname }} {{ admin.user.lastname }}</h1>
        <a href="{{ path('app_dashboard_admins') }}" class="btn btn-outline">Retour à la liste</a>
    </div>

    <div class="card">
        {{ include('dashboard_admins/_form.html.twig', {'button_label': 'Mettre à jour'}) }}

        <div style="margin-top: 20px; padding-top: 20px; border-top: 1px solid #eee; display: flex; justify-content: flex-end;">
            {{ include('dashboard_admins/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
