{% extends 'base.html.twig' %}

{% block title %}Liste des administrateurs{% endblock %}

{% block body %}
<div class="container">
    <div class="header-section">
        <h1>Liste des administrateurs</h1>
        <a href="{{ path('app_dashboard_admins_new') }}" class="btn btn-primary">Créer un nouvel administrateur</a>
    </div>

    <div class="card">
        <table class="table">
            <thead>
                <tr>
                    <th>Prénom</th>
                    <th>Nom</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for admin_item in admins %}
                <tr>
                    <td>{{ admin_item.user.firstname }}</td>
                    <td>{{ admin_item.user.lastname }}</td>
                    <td>{{ admin_item.user.email }}</td>
                    <td class="actions-cell">
                        <a href="{{ path('app_dashboard_admins_show', {'id': admin_item.id}) }}" class="btn btn-outline">Voir</a>
                        {% if admin_item.user.id != user.id %}
                            <a href="{{ path('app_dashboard_admins_edit', {'id': admin_item.id}) }}" class="btn btn-outline">Modifier</a>
                            <form method="post" action="{{ path('app_dashboard_admins_reset_password', {'id': admin_item.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir réinitialiser le mot de passe de cet administrateur ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('reset-password' ~ admin_item.id) }}">
                                <button class="btn btn-outline" style="color: #856404; border-color: #856404;">Reset MDP</button>
                            </form>
                        {% else %}
                            <span class="badge badge-light">Vous</span>
                        {% endif %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" style="text-align: center; padding: 40px; color: #999;">Aucun administrateur trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div style="margin-top: 20px;">
        <a href="{{ path('app_dashboard') }}" class="text-muted" style="text-decoration: none;">&larr; Retour au dashboard</a>
    </div>
</div>
{% endblock %}
