{% extends 'base.html.twig' %}

{% block title %}Modifier la salle{% endblock %}

{% block body %}
<div class="container">
    <div class="header-section">
        <h1>Modifier la salle : {{ room.name }}</h1>
        <a href="{{ path('app_dashboard_rooms') }}" class="btn btn-outline">Retour à la liste</a>
    </div>

    <div class="card">
        {{ include('dashboard_rooms/_form.html.twig', {'button_label': 'Mettre à jour'}) }}

        <div style="margin-top: 20px; padding-top: 20px; border-top: 1px solid #eee; display: flex; justify-content: flex-end;">
            {{ include('dashboard_rooms/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
