{% extends 'base.html.twig' %}

{% block title %}Liste des salles{% endblock %}

{% block body %}
<div class="container">
    <div class="header-section">
        <h1>Liste des salles</h1>
        <a href="{{ path('app_dashboard_rooms_new') }}" class="btn btn-primary">Créer une nouvelle salle</a>
    </div>

    <div class="card">
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Capacité</th>
                    <th>Équipements</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for room in rooms %}
                <tr>
                    <td>{{ room.id }}</td>
                    <td><strong>{{ room.name }}</strong></td>
                    <td><span class="badge badge-light">{{ room.capacity }} places</span></td>
                    <td>
                        {% for equipment in room.equipments %}
                            <span class="badge badge-primary">{{ equipment.name }}</span>
                        {% else %}
                            <span class="text-muted" style="font-size: 0.9em; font-style: italic;">Aucun équipement</span>
                        {% endfor %}
                    </td>
                    <td class="actions-cell">
                        <a href="{{ path('app_dashboard_rooms_show', {'id': room.id}) }}" class="btn btn-outline">Voir</a>
                        <a href="{{ path('app_dashboard_rooms_edit', {'id': room.id}) }}" class="btn btn-outline">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" style="text-align: center; padding: 40px; color: #999;">Aucune salle trouvée</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div style="margin-top: 20px;">
        <a href="{{ path('app_dashboard') }}" class="text-muted" style="text-decoration: none;">&larr; Retour au dashboard</a>
    </div>
</div>
{% endblock %}
