{% extends 'base.html.twig' %}

{% block title %}Coordinateur{% endblock %}

{% block body %}
<style>
    body {
        display: block!important;
    }

    nav, .card {
        width: 100%;
        max-width: 100%;
    }
</style>
<div class="container">
    <div class="header-section">
        <h1>Détails du coordinateur : {{ coordinator.user.firstname }} {{ coordinator.user.lastname }}</h1>
        <div class="actions-cell">
            <a href="{{ path('app_dashboard_coordinators_edit', {'id': coordinator.id}) }}" class="btn btn-primary">Modifier</a>
            <a href="{{ path('app_dashboard_coordinators') }}" class="btn btn-outline">Retour à la liste</a>
        </div>
    </div>

    <div class="card">
        <table class="table">
            <tbody>
                <tr>
                    <th style="width: 200px;">Id</th>
                    <td>{{ coordinator.id }}</td>
                </tr>
                <tr>
                    <th>Prénom</th>
                    <td>{{ coordinator.user.firstname }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ coordinator.user.lastname }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ coordinator.user.email }}</td>
                </tr>
                <tr>
                    <th>Classes gérées</th>
                    <td>
                        {% for class in coordinator.managedClasses %}
                            <span class="badge badge-primary">{{ class.name }}</span>
                        {% else %}
                            <span class="text-muted">Aucune classe gérée</span>
                        {% endfor %}
                    </td>
                </tr>
            </tbody>
        </table>

        <div style="margin-top: 20px; padding-top: 20px; border-top: 1px solid #eee; display: flex; justify-content: flex-end;">
            {{ include('dashboard_coordinators/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
