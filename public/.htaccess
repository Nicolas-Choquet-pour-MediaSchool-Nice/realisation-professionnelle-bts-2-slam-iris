<IfModule mod_rewrite.c>
    RewriteEngine On

    # Détermine la base de l'URL (utile si ton projet est dans un sous-dossier)
    RewriteBase /

    # Si le fichier ou le dossier demandé existe physiquement, on le sert directement
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d

    # Sinon, on envoie tout à index.php
    RewriteRule ^ index.php [QSA,L]
</IfModule>

<IfModule !mod_rewrite.c>
    <IfModule mod_alias.c>
        # Si mod_rewrite n'est pas activé, on essaie une redirection simple
        RedirectMatch 302 ^/$ /index.php/
    </IfModule>
</IfModule>
